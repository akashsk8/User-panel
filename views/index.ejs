<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <script src="https://cdn.tailwindcss.com"></script>
  <title>User Panel Dashboard</title>
</head>
<body class="bg-blue-100 min-h-screen flex items-center justify-center px-4">
  <div class="bg-white shadow-lg rounded-lg w-full max-w-4xl p-6">
    
    <!-- Header -->
    <h1 class="text-3xl md:text-4xl font-bold text-center text-blue-700 mb-4">
      Welcome to the User Panel Dashboard
    </h1>
    <p class="text-center text-gray-600 mb-6">
      A full-stack short project for user management.
    </p>
    <hr class="border-blue-300 mb-6" />

    <!-- Action Area -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
      <h3 class="text-lg font-medium text-gray-700">
        To see users, click on the <span class="text-blue-700 font-semibold">User Dashboard</span> button below.
      </h3>

      <!-- Auth Buttons -->
      <div class="flex flex-wrap gap-2">
        <% if (token == undefined) { %>
          <a href="/login" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition">
            Login
          </a>
          <a href="/register" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition">
            Register
          </a>
        <% } else { %>
          <p class="text-gray-700 font-semibold flex items-center gap-2">
            Hello, <span class="text-blue-600"><%= admin.username %></span>
          </p>
          <a href="/logout" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded transition">
            Logout
          </a>
        <% } %>
      </div>
    </div>

    <!-- Dashboard Button -->
    <div class="text-center">
      <a href="/dashboard" class="inline-block bg-blue-700 hover:bg-blue-800 text-white text-lg px-6 py-3 rounded-md transition">
        Go to User Dashboard
      </a>
    </div>

  </div>
</body>
</html>
